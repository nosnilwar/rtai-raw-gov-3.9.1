# Makefile Default para a compilacao de arquivos.c usando o RTAI

TARGET='NOME_ARQUIVO'
SRCS=$(TARGET).c

RUNINFO=.runinfo

FLAGS=-O2 -Wall -MMD
INCLUDE=-I. -I$(HOME)/include -I/usr/realtime/include
LIBDIR=-L$(HOME)/lib
LIBS=

CC=gcc
CFLAGS=$(FLAGS) $(INCLUDE)
LDFLAGS=$(LIBDIR) $(LIBS)

all: $(TARGET) $(RUNINFO)

$(TARGET): $(SRCS:.c=.o)
	$(CC) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

-include $(SRCS:.c=.d)

$(RUNINFO): Makefile
	#target_name:module_dependencies:run_actions:init_comment > .runinfo
	echo "$(TARGET):lxrt:./$(TARGET);popall:" > $(RUNINFO)

clean:
	rm -f *~ *.bak *.o *.d
	rm -f $(TARGET) $(RUNINFO)